<Window x:Class="AlmacenTecSP.Views.DialogoCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:AlmacenTecSP.Views"
        mc:Ignorable="d"
        Title="DialogoCategoria" Height="180" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16">
        <Label>Nombre de la categoria:</Label>
        <TextBox Name="txtNombreCategoria"
          materialDesign:HintAssist.Hint="Nombre" MaxLength="20">
        </TextBox>
        <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="BtnGuardar_Click" MinWidth="60" Margin="0,0,10,0">_Guardar</Button>
            <Button IsCancel="True">_Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
